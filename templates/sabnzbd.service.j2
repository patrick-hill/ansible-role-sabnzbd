#
# Systemd unit file for SABnzbd
#

[Unit]
Description=SABnzbd Daemon

[Service]
Type=forking
User={{ sab_user }}
Group={{ sab_group }}
ExecStart=/usr/bin/python {{ sab_install_dir }}/SABnzbd.py --daemon --config-file={{ sab_config_dir }}/sabnzbd_config.ini -s 0.0.0.0
GuessMainPID=no

[Install]
WantedBy=multi-user.target
